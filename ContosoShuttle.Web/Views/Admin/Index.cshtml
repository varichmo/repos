@{
    ViewBag.Title = "Admin";
}

<div class="create-ad-container">
    <div class="container">
        <h1>Update</h1>
    </div>

    <div class="bottom-container">
        @using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                @if (ViewBag.Message != null)
                {
                    <div>@ViewBag.Message</div>
                }
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <label class="control-label col-md-3" for="destination">Destination</label>
                        <div class="col-md-9">
                            @Html.DropDownList("destination", (SelectList)ViewBag.Destinations, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="row">
                        <label class="control-label col-md-3" for="imageFile">Image file</label>
                        <div class="col-md-9">
                            <input type="file" name="imageFile" accept="image/*" class="form-control fileupload" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="button create-ad" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}